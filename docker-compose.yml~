services:
  api:
    build: .
    ports:
      - "8080:8080"
    environment:
      - DB_DRIVER=postgres
      - DB_HOST=db
      - DB_PORT=5432
      - DB_USER=postgres
      - DB_PASSWORD=admin
      - DB_NAME=teste
      - WEBSERVER_PORT=8080
      - JWT_SECRET=secret
      - JWT_EXPIRESIN=300
    depends_on:
      - db
    volumes:
      - .:/app
    networks:
      - api-network

  db:
    image: postgres:16
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: admin
      POSTGRES_DB: teste
    ports:
      - "5432:5432"
    volumes:
      - db_data:/var/lib/postgresql/data
    networks:
      - api-network

volumes:
  db_data:

networks:
  api-network:
